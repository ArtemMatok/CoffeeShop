@using Coffee.ViewModels

@model ProductVM

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product">Create New Category</a>
             <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Back</a>
        </div>

    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Product Price
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
                        <tr>
                            <td>
                    @item.Name
                            </td>
                            <td>
                    @item.Description
                            </td>
                                <td>
                    @item.Price
                                </td>
                            <td role="group">
                                <a asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edite</a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        </tr>
        }
    </tbody>
</table>

