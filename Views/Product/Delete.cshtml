
@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Category</h2>
            </hr>
        </div>
        <input type="hidden" asp-for="Id"/>
        <div asp-validation-summary=All></div>
        <img src="@Model.Image"/>
        <div class="row mb-3">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="Description"></label>
            <input disabled asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Price"></label>
            <input disabled asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button class="btn btn-danger" type="submit">Delete</button>

    </div>
    <a asp-action="Index" asp-controller="Category">Back To List</a>
</form>

@section scripts{
    @{
                        <partial name="_ValidationScriptsPartial"></partial>
    }
    }

